@using DrugStore.Models.Entities;
@model IEnumerable<DrugStore.Models.Entities.Tag>
@{
    DrugStoreDbContext dbContext = new DrugStoreDbContext().Created();
}

<div class="blog__sidebar">
    <div class="blog__sidebar__search">
        <form action="#">
            <input type="text" placeholder="Tìm kiếm...">
            <button type="submit"><span class="icon_search"></span></button>
        </form>
    </div>
    <div class="blog__sidebar__item">
        <h4>Tag</h4>
        <ul>
            @foreach (var item in Model)
            {
                <li><a href="#">@item.IdTag</a></li>
            }
        </ul>
    </div>
    <div class="blog__sidebar__item">
        <h4>Tin mới</h4>
        <div class="blog__sidebar__recent">
            @foreach (var item in dbContext.TinTucs.OrderBy(c=>c.ThoiGiaDang).ToList())
            {
                <a href="#" class="blog__sidebar__recent__item">
                    <div class="blog__sidebar__recent__item__pic">
                        <img src="/images/tintuc/@item.AnhDaiDien" width="120px" height="60px" alt="">
                    </div>
                    <div class="blog__sidebar__recent__item__text">
                        <h6>@item.MoTaTT</h6>
                        <span>@item.ThoiGiaDang</span>
                    </div>
                </a>
            }
        </div>
    </div>
    <div class="blog__sidebar__item">
        @*<h4>Search By</h4>*@
        <div class="blog__sidebar__item__tags">
            @*<a href="#">Apple</a>
            <a href="#">Beauty</a>
            <a href="#">Vegetables</a>
            <a href="#">Fruit</a>
            <a href="#">Healthy Food</a>
            <a href="#">Lifestyle</a>*@
        </div>
    </div>
</div>
