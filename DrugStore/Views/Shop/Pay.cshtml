@model DrugStore.Models.Entities.HoaDon
@{
    var info = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
}
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/theme/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Checkout</h2>
                    <div class="breadcrumb__option">
                        <a asp-controller="Home" asp-action="Index">Home</a>
                        <span>Thanh Toán</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                @* <h6>
                <span class="icon_tag_alt"></span> Have a coupon? <a href="#">Click here</a> to enter your code
                </h6>*@
            </div>
        </div>
        <div class="checkout__form">
            <h4>Hóa Đơn</h4>
            <form action="Pay" method="post">
                @Html.TextBoxFor(model => model.SoDH, new {type = "hidden", value = Model.SoDH, @readonly = "readonly"})
                <div class="row">
                    <div class="col-lg-8 col-md-6">
                        <div class="row">
                            @if (SignInManager.IsSignedIn(User))
                            {
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>Họ Tên<span>*</span></p>
                                        @*<input type="text" value="@Model.TenNguoiMua" readonly>*@
                                        @Html.TextBoxFor(model => model.TenNguoiMua, new {type = "text", value = @Model.TenNguoiMua, @readonly = "readonly"})

                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>Họ Tên<span>*</span></p>
                                        @*<input type="text" value="@Model.TenNguoiMua">*@
                                        @Html.TextBoxFor(model => model.TenNguoiMua, new { type = "text"})
                                    </div>
                                </div>
                            }

                        </div>
                        @*<div class="checkout__input">
                        <p>Country<span>*</span></p>
                        <input type="text">
                        </div>*@
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>SĐT<span>*</span></p>
                                        @*<input type="text" value="@Model.SDT" readonly>*@
                                        @Html.TextBoxFor(model => model.SDT, new { type = "text", value=@Model.SDT, @readonly = "readonly"})

                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>Email<span>*</span></p>
                                        @*<input type="text" value="@Model.Email" readonly>*@
                                        @Html.TextBoxFor(model => model.Email, new { type = "text", value = @Model.Email, @readonly = "readonly"})

                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>SĐT<span>*</span></p>
                                        @*<input type="text" value="@Model.SDT">*@
                                        @Html.TextBoxFor(model => model.SDT, new { type = "text"})

                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>Email<span>*</span></p>
                                        @*<input type="text" value="@Model.Email">*@
                                        @Html.TextBoxFor(model => model.Email, new { type = "text"})

                                    </div>
                                </div>
                            </div>
                        }
                        
                        <div class="checkout__input">
                            <p>Địa Chỉ Giao<span>*</span></p>
                            @*<input type="text" placeholder="Địa Chỉ Giao" class="checkout__input__add" id="DiaChiGiao">*@
                            @Html.TextBoxFor(model => model.DiaChiGiao, new { type = "text", @class="checkout__input__add"})
                        </div>
                        <div class="checkout__input">
                            <p>Ngày Nhận Dự Kiến<span>*</span></p>
                            @*<input type="date" class="checkout__input__add" id="NgayGiao">*@
                            @Html.TextBoxFor(model => model.NgayGiao, new { type = "date", @class="checkout__input__add"})
                        </div>
                        @*<div class="checkout__input">
                        <p>Town/City<span>*</span></p>
                        <input type="text">
                        </div>
                        <div class="checkout__input">
                        <p>Country/State<span>*</span></p>
                        <input type="text">
                        </div>
                        <div class="checkout__input">
                        <p>Postcode / ZIP<span>*</span></p>
                        <input type="text">
                        </div>*@

                        @*<div class="checkout__input__checkbox">
                        <label for="acc">
                        Create an account?
                        <input type="checkbox" id="acc">
                        <span class="checkmark"></span>
                        </label>
                        </div>
                        <p>
                        Create an account by entering the information below. If you are a returning customer
                        please login at the top of the page
                        </p>*@
                        @*<div class="checkout__input">
                        <p>Account Password<span>*</span></p>
                        <input type="text">
                        </div>
                        <div class="checkout__input__checkbox">
                        <label for="diff-acc">
                        Ship to a different address?
                        <input type="checkbox" id="diff-acc">
                        <span class="checkmark"></span>
                        </label>
                        </div>*@
                        <div class="checkout__input">
                            <p>Ghi Chú<span>*</span></p>
                            @Html.TextBoxFor(model => model.GhiChu, new { type = "text", @class="checkout__input__add"})

                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="checkout__order">
                            <h4>Đơn Đặt Hàng</h4>
                            <div class="checkout__order__products">Sản Phẩm <span>Giá Tiền</span><span>Số Lượng</span></div>
                            <ul>
                                @foreach (var item in Model.CT_HoaDon)
                                {
                                    <li>@item.SanPham.TenSP<span>@item.SoLuong</span><span>@String.Format(info, "{0:c}", @item.ThanhTien)</span></li>
                                }
                                @*<li>Vegetable’s Package <span>$75.99</span></li>
                                <li>Fresh Vegetable <span>$151.99</span></li>
                                <li>Organic Bananas <span>$53.99</span></li>*@
                            </ul>
                            <div class="checkout__order__subtotal">Số Lượng Sản Phẩm <span>@ViewBag.CountProductBought</span></div>
                            <div class="checkout__order__total">Tổng Tiền <span> @String.Format(info, "{0:c}", @ViewBag.SumProductBought)</span></div>
                            @* <div class="checkout__input__checkbox">
                            <label for="acc-or">
                            Create an account?
                            <input type="checkbox" id="acc-or">
                            <span class="checkmark"></span>
                            </label>
                            </div>
                            <p>
                            Lorem ipsum dolor sit amet, consectetur adip elit, sed do eiusmod tempor incididunt
                            ut labore et dolore magna aliqua.
                            </p>*@
                            
                            <div class="checkout__input__checkbox">
                                @Html.DropDownList("MaHT", (IEnumerable<SelectListItem>)ViewBag.HinhThucThanhToan, htmlAttributes: new { @class = "form-control" })
                            </div>

                            @*<div class="checkout__input__checkbox">
                                <label for="payment">
                                    Check Payment
                                    <input type="checkbox" id="payment">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                            <div class="checkout__input__checkbox">
                                <label for="paypal">
                                    Paypal
                                    <input type="checkbox" id="paypal">
                                    <span class="checkmark"></span>
                                </label>
                            </div>*@
                            
                            <button type="submit" class="site-btn">Thanh Toán</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
<!-- Checkout Section End -->