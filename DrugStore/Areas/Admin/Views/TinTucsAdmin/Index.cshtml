@model X.PagedList.IPagedList<DrugStore.Models.Entities.TinTuc>
@using X.PagedList.Mvc.Core;
@{
    ViewBag.Title = "Index";
}

<h2>Tin tức</h2>

<p>
    @*@Html.ActionLink("Create New", "Create")*@
    <a href="/Admin/TinTucsAdmin/Create" class="button">Tạo mới</a>
</p>
<table class="table">
    <tr>
        <th>
            Ảnh đại diện
        </th>
        <th>
            Thời gian đăng
        </th>
        <th>
            Mô tả 
        </th>
        <th>
            Số lượt xem
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="~/images/tintuc/@item.AnhDaiDien" width="150" height="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThoiGiaDang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoTaTT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuotXem)
            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.MaTT }) |
                @Html.ActionLink("Chi tiết", "Details", new { id=item.MaTT }) |
                @Html.ActionLink("Xóa", "Delete", new { id=item.MaTT })
            </td>
        </tr>
    }

</table>
<div @*class="product__pagination"*@>
    Trang: @Html.PagedListPager(Model, page => Url.Action("Index", new{ page = page}))
</div>
