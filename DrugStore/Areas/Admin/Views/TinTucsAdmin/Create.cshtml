@model DrugStore.Models.Entities.TinTuc
@using DrugStore.Models.Entities

@{
    ViewBag.Title = "Create";
    DrugStoreDbContext dbContext = new DrugStoreDbContext().Created();
    List<Tag> tag = dbContext.Tags.ToList();
}

<h2>Create</h2>

<form asp-action="Create"  enctype="multipart/form-data"  method="post">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>TinTuc</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.ThoiGiaDang, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @DateTime.Now<br />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NoiDung, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NoiDung, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NoiDung, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MoTaTT, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MoTaTT, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MoTaTT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Tag: </label>
            <div class="col-md-10">
                @foreach (var item in Model.TagTinTucs)
                {
                    <input type="checkbox" name="TagTinTucs" id="@item.IdTag" value="@item.IdTag" class="form-check-input" />

                    @item.IdTag

                    <br>
                }
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AnhDaiDien, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="custom-file">
                @Html.TextBox("fileImage", "", new { type = "file", accept = "image/*" })<br />
                <img id="preview" src="https://climate.onep.go.th/wp-content/uploads/2020/01/default-image.jpg" width="150" height="100" class="hidden" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
