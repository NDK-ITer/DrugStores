@model X.PagedList.IPagedList<DrugStore.Models.Entities.AspNetUser>
@using X.PagedList.Mvc.Core;


<h1>Tài Khoản</h1>

<form asp-action="Index">
    <label>Tìm kiếm: </label>
    <input type="text" class="" name="keySearch" />
    <button type="submit" class="btn-find" @*value="Tìm kiếm"*@><i class="fa"></i> </button>
</form>

<table class="table">
    <tr>
        <th>
            Tên đăng nhập
        </th>
        <th>
            Họ
        </th>
        <th>
            Tên
        </th>
        <th>
            Email
        </th>
        <th>
            Số điện thoại
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.ActionLink("Chi Tiết", "Details", new { SoDH=item.Id })
            </td>
        </tr>
    }
</table>
<div class="product__pagination">
    Trang: @Html.PagedListPager(Model, page => Url.Action("Index", new{ page = page}))
</div>