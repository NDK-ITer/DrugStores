                type: "Get",
                url: 'https://localhost:7254/Admin/HomeAdmin/tongHoaDon',
                data: {
                    datefrom: start.format('YYYY-MM-DD HH:mm:ss'),
                    dateto: end.format('YYYY-MM-DD HH:mm:ss'),
                    type: "ajax",
                },
                contentType: "application/json; charset=utf-8",
                success: function (result) {
                    console.log(result.data);
                    let chartlabels = result.data.map(object => object.gio)
                    let chartdata = result.data.map(object => object.soluong)
                    Chart.defaults.global.defaultFontFamily = '-apple-system,system-ui,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,sans-serif';
                    Chart.defaults.global.defaultFontColor = '#292b2c';

                    // Area Chart Example
                    var ctx = document.getElementById("myBarChart");
                    var myLineChart = new Chart(ctx, {
                        type: 'bar',
                        data: {
                            labels: chartlabels,
                            datasets: [
                                {
                                    label: 'Tổng Hóa Đơn',
                                    backgroundColor: '#FCC984',
                                    borderColor: '#FCC984',
                                    borderWidth: 2,
                                    data: chartdata,
                                }
                            ]
                        },
                        options: {
                            indexAxis: 'y',
                            elements: {
                                bar: {
                                    borderWidth: 2,
                                }
                            },
                            responsive: true,
                            legend: {
                                display: false,
                            },
                            plugins: {
                                labels: {
                                    render: function (args) {
                                        return '';
                                    }
                                },
                                legend: {
                                    display: false,
                                },
                            }
                        },
                    });


                }
            });
            // Run code
