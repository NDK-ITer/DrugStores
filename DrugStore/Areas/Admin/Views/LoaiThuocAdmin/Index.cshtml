@*@model IEnumerable<DrugStore.Models.Entities.LoaiThuoc>*@
@model DrugStore.Models.Entities.LoaiThuoc
@{
    ViewData["Title"] = "Loại Thuốc";
    //Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var dsLoaiThuoc = ViewBag.DsLoaiThuoc as List<DrugStore.Models.Entities.LoaiThuoc>;
}

<h1>Danh Sách Các Loại Thuốc</h1>
@*<p>
    @Html.ActionLink("Tạo mới", "Create")

</p>*@
@*<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Thêm
</button>*@
<p>
    <a href="/Admin/LoaiThuocAdmin/Create" class="button">Tạo mới</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenLoaiThuoc)
        </th>
        <th></th>
    </tr>

    @foreach (var item in dsLoaiThuoc)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenLoaiThuoc)
            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.MaLT }) |
                @Html.ActionLink("Chi tiết", "Details", new { id=item.MaLT }) |
                @Html.ActionLink("Xóa", "Delete", new { id=item.MaLT })
            </td>
        </tr>
    }

</table>

<!-- Button trigger modal -->
@*<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Launch demo modal
</button>*@

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Thêm Loại Thuốc</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Create", "LoaiThuocAdmin", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4>LoaiThuoc</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.TenLoaiThuoc, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.TenLoaiThuoc, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TenLoaiThuoc, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        @*<div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create" class="btn btn-default" />
                            </div>
                        </div>*@
                    </div>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button type="submit" class="btn btn-primary">Tạo</button>
                }
            </div>
            <div class="modal-footer">
                
            </div>
        </div>
    </div>
</div>
