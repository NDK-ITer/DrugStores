@model IEnumerable<DrugStore.Models.Entities.SanPham>
@{
    ViewBag.Title = "Sản Phẩm";
}

<h2>Sản Phẩm</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenSP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AnhDaiDien)
        </th>
        <th>
            Loại Sản Phẩm
        </th>
        <th>
            Trạng Thái
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GiamGia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DonGia)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenSP)
            </td>
            @if (item.MaLoaiSP == "T")
            {
                <td>
                    <img src="~/images/sanpham/thuoc/@item.AnhDaiDien" width="150" height="100" />
                </td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.LoaiSP.TenLoaiSP)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.TrangThai.TenTT)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.GiamGia)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.DonGia)
            </td>

            <td>
                @if (item.MaLoaiSP == "T")
                {
                    @Html.ActionLink("Edit", "Edit" ,"ThuocAdmin", new { id=item.MaSP })<p> | </p>
                    @Html.ActionLink("Details", "Details" ,"ThuocAdmin", new { id=item.MaSP })<p> | </p>
                    @Html.ActionLink("Delete", "Delete" ,"ThuocAdmin", new { id=item.MaSP })<p> | </p>
                }
            </td>
        </tr>
    }

</table>

