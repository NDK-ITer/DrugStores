@model DrugStore.Models.Entities.HoaDon
@{
    var info = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
}

<div class="bill-details">
    <h4>Số Hóa Đơn : @Model.SoDH</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            Ngày lập:
        </dt>

        <dd>
            @Model.NgayLap
        </dd>

        <dt>
            Địa chỉ giao:
        </dt>

        <dd>
            @Model.DiaChiGiao
        </dd>

        <dt>
            Ghi chú:
        </dt>

        <dd>
            @Model.GhiChu
        </dd>

        <dt>
            Trạng thái thanh toán:
        </dt>

        @if (Model.DaThanhToan == true)
        {
            <dd>
                Đã Thanh Toán
            </dd>
        }
        else
        {
            <dd>
                Chưa Thanh Toán
            </dd>
        }
        <dt>
            Hình thức thanh toán:
        </dt>
        <dd>
            @Model.HinhThucThanhToan.TenHT
        </dd>
        <dt>
            Tổng thành tiền:
        </dt>

        <dd>
            @String.Format(info, "{0:c}", Model.TongThanhTien)
        </dd>

        <dt>
            Danh sách sản phẩm:
        </dt>

        <table class="table">
            <tr>
                <th>
                    Tên sản phẩm
                </th>

                <th>
                    Ảnh
                </th>

                <th>
                    Số Lượng
                </th>

                <th>
                    Thành tiền
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model.CT_HoaDon)
            {
                <tr>
                    <td>
                        @item.SanPham.TenSP
                    </td>
                    <td>
                        @if (item.SanPham.Thuoc != null)
                        {
                            <img src="/images/sanpham/thuoc/@item.SanPham.AnhDaiDien" width="100" height="100" />
                        }
                    </td>
                    <td>
                        @item.SoLuong
                    </td>
                    <td>
                        @String.Format(info, "{0:c}", item.ThanhTien)
                    </td>
                </tr>
            }
        </table>
    </dl>
    <p>
        @Html.ActionLink("Quay lại danh sách hóa đơn", "Index")
    </p>
</div>

