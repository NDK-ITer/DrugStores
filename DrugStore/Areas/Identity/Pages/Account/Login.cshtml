<section class="">
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-6">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                     class="img-fluid" alt="Phone image">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <form id="account" method="post">
                    <!-- Email input -->
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                       
                    </div>
                   
                    <div class="form-outline mb-4">
                        <label asp-for="Input.Email" class="form-label">Địa Chỉ Email</label>
                        <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="username" aria-required="true" placeholder="Nhập Địa Chỉ Email" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>    
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-4">
                        <label asp-for="Input.Password" class="form-label">Mật Khẩu</label>
                        <input asp-for="Input.Password" class="form-control form-control-lg" autocomplete="current-password" aria-required="true" placeholder="Nhập Mật Khẩu" />     
                        <span asp-validation-for="Input.Password" class="text-danger"></span>                  
                    </div>

                    <div class="d-flex justify-content-around align-items-center mb-4">
                        <!-- Checkbox -->
                        <div class="form-check">

                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                Ghi Nhớ Tài Khoản
                            </label>
                          @*  <input class="form-check-input" type="checkbox" value="" id="form1Example3" checked />
                            <label class="form-check-label" for="form1Example3"> Remember me </label>*@
                        </div>
                        <a id="forgot-password" asp-page="./ForgotPassword">Quên Mật Khẩu</a>
                    </div>
                    <div class="d-flex justify-content-around align-items-center mb-4">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Đăng Ký</a>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Gửi lại email xác nhận</a>
                    </div>
                    <!-- Submit button -->
                    <div>
                        <button id="login-submit" type="submit" class="btn btn-primary btn-lg btn-block">Đăng Nhập</button>
                    </div>

                    
                </form>
                <div class="divider d-flex align-items-center my-4">
                    <p class="text-center fw-bold mx-3 mb-0 text-muted">Hoặc Đăng Nhập Với</p>
                </div>
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                    <div>
                        <p>
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                string name = provider.DisplayName.ToLower();

                                <button type="submit" class="btn btn-primary btn-lg btn-block" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account"> <i class="fa fa-@name mr-2"></i>@provider.DisplayName</button>
                            }
                        </p>
                    </div>
                </form>

            </div>
        </div>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
