@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Đăng ký xác nhận";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
        <img class="gmail" src="\theme\img\mail.jpg" alt="#">
        
        <p style="text-align:center;">

            <a style="color:#0732c5;" id="confirm-link" href="@Model.EmailConfirmationUrl">Nhấn vào đây để xác nhận tài khoản</a> hoặc qua mail của bạn.
            
        </p>
        
    }
    else
    {
        <p>
            Vui lòng kiểm tra email của bạn để xác nhận tài khoản của bạn.
        </p>
    }
}

